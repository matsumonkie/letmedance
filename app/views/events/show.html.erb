<% if user_super_admin? %>
  <li><%= link_to "Edit", edit_event_path(@event) %></li>
  <li><%= link_to "Destroy", event_path(@event), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<% end %>

<!-- MENU -->
<div class="flex max-w-4xl items-center mx-auto">
  <a class="font-medium text-gray-900 mx-auto block" href="/events">Soir√©es</a>
</div>

<div class="bg-white overflow-hidden">

  <div class="relative max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="hidden lg:block bg-gray-50 absolute top-0 bottom-0 left-3/4 w-screen"></div>
    <div class="mx-auto text-base max-w-prose lg:grid lg:grid-cols-2 lg:gap-8 lg:max-w-none">
      <div>

        <!-- date + time -->
        <figcaption class="mt-3 flex text-sm text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" color="rgb(79 70 229)" stroke="currentColor"
               stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0
                                                                    00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h2 class="ml-2 text-base text-indigo-600 font-semibold tracking-wide">
            <%= @event.human_start_at %>
          </h2>
        </figcaption>

        <!-- title -->
        <h3 class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          <%= @event.title %>
        </h3>

      </div>
    </div>
    <div class="mt-8 lg:grid lg:grid-cols-2 lg:gap-8">
      <div class="relative lg:row-start-1 lg:col-start-2">
        <svg class="hidden lg:block absolute top-0 right-0 -mt-20 -mr-20" width="404" height="384" fill="none" viewBox="0 0 404 384" aria-hidden="true">
          <defs>
            <pattern id="de316486-4a29-4312-bdfc-fbce2132a2c1" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
              <rect x="0" y="0" width="4" height="4" class="text-gray-200" fill="currentColor" />
            </pattern>
          </defs>
          <rect width="404" height="384" fill="url(#de316486-4a29-4312-bdfc-fbce2132a2c1)" />
        </svg>
        <div class="relative text-base mx-auto max-w-prose lg:max-w-none">
          <figure>

            <!-- image -->
            <div class="aspect-w-12 aspect-h-7 lg:aspect-none">
              <%= image_tag(@event.image, width: 1184, height: 1376, class: "rounded-lg shadow-lg object-cover object-center") if @event.image %>
            </div>

          </figure>
        </div>
      </div>

      <div class="mt-8 lg:mt-0">

        <!-- location & address  -->
        <% if @event.location_name %>
          <div class="text-base max-w-prose mx-auto lg:max-w-none">

            <!-- location -->
            <p class="text-lg text-gray-500"><%= @event.location_name %></p>

            <!-- address -->
            <% if @event.address %>
              <figcaption class="mt-3 flex text-sm text-gray-500">
                <!-- Heroicon name: location-address -->
                <svg class="flex-none w-6 h-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <a class="ml-2 underline text-blue-600 hover:text-blue-800 visited:text-purple-600" href="<%= @event.google_map_address_link %>">
                  <%= @event.address %>
                </a>
              </figcaption>
            <% end %>
          </div>
        <% end %>

        <!-- description -->
        <div class="mt-5 prose prose-indigo text-gray-500 mx-auto lg:max-w-none lg:row-start-1 lg:col-start-1">
          <% @event.description.split("\n").each do |description| %>
            <%= description %> <br>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
